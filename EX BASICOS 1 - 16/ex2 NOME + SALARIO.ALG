algoritmo "Nome + Salario"

var

   nome: caractere
   salario: real

inicio
      escreva("Digite um nome: ")
      leia(nome)
      escreva("Digite o valor do salário:")
      leia(salario)
      escreval("O funcionário(a) ",nome, " tem um salário de R$",salario,"!")
   

fimalgoritmo